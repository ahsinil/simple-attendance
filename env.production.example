# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Application
APP_NAME="Attendance System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://attendance.yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database (Docker Compose will override DB_HOST)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=simple_attendance
DB_USERNAME=attendance_user
DB_PASSWORD=your_secure_database_password
DB_ROOT_PASSWORD=your_secure_root_password

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue & Cache
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# ============================================
# ATTENDANCE SYSTEM SETTINGS
# ============================================

# Barcode rotation interval in seconds (default: 5 minutes)
BARCODE_ROTATION_SECONDS=300

# Secret key for barcode signing (generate a random 32-char string)
BARCODE_SECRET_KEY=your_32_character_secret_key_here

# Maximum GPS accuracy in meters
GPS_MAX_ACCURACY_METERS=100

# Device registration settings
DEVICE_REGISTRATION_ENABLED=false
MAX_DEVICES_PER_USER=2

# ============================================
# OPTIONAL: MAIL CONFIGURATION
# ============================================
# Configure if you need email notifications

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# OPTIONAL: REDIS (for better performance)
# ============================================
# Uncomment and configure to use Redis

# REDIS_HOST=redis
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# CACHE_STORE=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
# Leave empty to allow same-origin only

CORS_ALLOWED_ORIGINS=

# Vite build variable
VITE_APP_NAME="${APP_NAME}"
